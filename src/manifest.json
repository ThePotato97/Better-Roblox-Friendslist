{
  "name": "Better Roblox Friendslist",
  "description": "a better roblox friends list",
  "version": "0.2.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/Icon16x.png",
    "48": "icons/Icon48x.png",
    "128": "icons/Icon128x.png"
  },
  "background": {
    "service_worker": "./pages/Background/index.ts",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "./styles/*.scss",
        "./pages/WindowCommunication/inject.ts",
        "./pages/ContentScript/inject.ts",
        "images/unknowngame.png",
        "icons/Icon48x.png"
      ],
      "matches": [
        "*://www.roblox.com/*",
        "*://web.roblox.com/*",
        "*://rokitty.app/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.roblox.com/*",
        "*://web.roblox.com/*",
        "*://rokitty.app/*"
      ],
      "run_at": "document_idle",
      "js": [
        "./pages/ContentScript/index.tsx"
      ]
    }
  ],
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*.roblox.com/*"
  ]
}